{

    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": 1,
        "indent": 0,
        "quotes": 0,
        "no-undef": 1,
        "no-console": 0,
        "no-mixed-spaces-and-tabs": 1,
        "no-unused-vars": 1,
        "semi": 1
    }
}
